<div class="container">
  <h2 class="text-center py-5">ユーザー詳細</h2>

  <div class="w-1oo">
    <div class="text-center mb-5">
      <h5><%= @user.name %></h5>
    </div>

    <div class="w-50 mx-auto">
      <table class="table table-borderless">
        <tr>
          <th class="col-8 text-center">報告件数</th>
          <td>
            <%= link_to admin_post_comments_path do %>
            <%= @user.post_comments.count %>件
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <div class="text-center mt-5">
      <%= link_to '無効にする', admin_user_path(@user), method: :patch, class: 'btn btn-primary' %>
    </div>
  </div>
</div>