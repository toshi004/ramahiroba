<div class="container">
  <h2 class="py-5">ログイン</h2>

  <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>

    <div class="form-group row">
      <label class="col-2 col-form-label">メールアドレス</label>
      <div class="col-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-2 col-form-label">パスワード</label>
      <div class="col-4">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-3 ml-4">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, '次回から自動でログイン', class: 'form-check-label' %>
        </div>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col-4 text-center pt-4">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <div class="py-3">
    <%= render "public/devise/shared/links" %>
  </div>
</div>
