<div class="container">
  <h2 class="text-center py-5">お問い合わせ</h2>

  <div class="row justify-content-md-center">
    <%= form_with model: @inquiry, :url => inquiry_thanks_path, local: true do |f| %>

      <div class="form-group row">
        <label class="col-6 col-form-label">お名前</label>
        <%= f.hidden_field :name %>
        <div class="col-6">
          <%= @inquiry.name %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-6 col-form-label">メールアドレス</label>
        <%= f.hidden_field :email %>
        <div class="col-6">
          <%= @inquiry.email %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-6 col-form-label">お問い合わせ内容</label>
        <%= f.hidden_field :message %>
        <div class="col-6 text-wrap">
          <%= @inquiry.message %>
        </div>
      </div>

      <div class="form-group row">
        <div class="mx-auto py-3">
          <%= f.submit "送信", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>

</div>