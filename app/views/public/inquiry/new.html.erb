<div class="container">
  <h2 class="text-center py-5">お問い合わせ</h2>

  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-md-center">
    <%= form_with model: @inquiry, :url => inquiry_confirm_path, local: true do |f| %>

      <div class="form-group row">
        <label class="col-6 col-form-label">お名前</label>
        <div class="col-6">
          <%= f.text_field :name, autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-6 col-form-label">メールアドレス</label>
        <div class="col-6">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-6 col-form-label">お問い合わせ内容</label>
        <div class="col-6">
          <%= f.text_area :message, size: '30x5' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="mx-auto">
          <%= f.submit "確認", class: 'btn btn-info' %>
        </div>
      </div>

    <% end %>
  </div>
</div>