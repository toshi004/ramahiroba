<div class="container">
  <h2 class="text-center py-5">おはなし編集</h2>

  <div class="row justify-content-md-center">
    <%= form_with model: @post, local: true do |f| %>

    <div class="form-group row">
      <label class="col-4 col-form-label">タイトル</label>
      <div class="col-8">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-4 col-form-label">画像</label>
      <div class="col-8">
        <%= attachment_image_tag @post, :image, fallback: "NoImage.jpg", size: '50x50' %>
      </div>
      <div class="col-4"></div> <!-- レイアウト調整用 -->
      <div class="col-8 text-center">
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-4 col-form-label">本文</label>
      <div class="col-8">
        <%= f.text_area :text, size: '35x10' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-4 col-form-label">気持ち</label>
      <div class="col-8">
        <%= f.select :emotion, Post.emotions.keys.to_a, include_blank: "選択して下さい" %>
      </div>
    </div>

    <div class="form-group row py-3">
      <div class="col-12 text-center">
        <%= f.submit "更新", class: 'btn btn-success' %>
      </div>
    </div>

  <% end %>
  </div>

</div>